doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title
    link(rel='stylesheet' href='app.css')
  body
    div(vocab='b-wrap')
      .canvas
        canvas#canvas(width='500' height='500')
        #point(style='transform: rotate(45deg)')
          .end
            .drop
      #controls.b-controls

        b Background:
        div
          label
            input(type='radio' name='bgType' value='grid')
            |  Grid:
            input#grid(type='number' value='50')
        div
          label
            input(type='radio' name='bgType' value='image')
            |  Image:
      div
        button Start
        button Pause
        #logs

      div(style="margin: 100px; width: 300px")
        .clr
        div Speed:
        .ui-slider
          .ui-slider__range
            .ui-slider__body
              .ui-slider__point
          .ui-slider__value 50

        div Horizontal angle:
        .ui-slider
          .ui-slider__range
            .ui-slider__body
              .ui-slider__point
          .ui-slider__value 50

        label.ui-radio
          input(type='radio' name='type' value='image')
          .toggle
          | Image background:

        div
          .ui-image.selected(style='background-image: url("./images/cloud.png")')
          .ui-image.add

        label.ui-radio
          input(type='radio' name='type' value='grid')
          .toggle
          | Grid background:

        div Grid size:
          .ui-slider
            .ui-slider__range
              .ui-slider__body
                .ui-slider__point
            .ui-slider__value 50

        label.ui-radio
          input(type='radio' name='type' value='none')
          .toggle
          | Without background:

        div
          div.align-center
            br
            br
            button Add an obstacle
            br
            br
          p To add an obstacle click on the button. After you will be able to add points of the obstacle object. To finish adding press the enter key, to cancel press the escape button





    script(src='app.js')
