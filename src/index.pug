doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title
    link(rel='stylesheet' href='app.css')
  body
    .none
      .ui-slider
        .ui-slider__range
          .ui-slider__body(ref='body')
            .ui-slider__point(ref='point')
        .ui-slider__value(ref='title')
    div(class='b-wrap')
      .canvas
        canvas#canvas(width='500' height='500')
        #polygons
        #point(style='transform: rotate(45deg)')
          .end
            .drop
      #controls.b-controls
        .ui-group
          .ui-group__title General
          .ui-group__body
            div Started speed:
            input(type='number' min='10' max='200' value='50' step='5' name='speed')

            div Horizontal angle:
              input(type='number' min='0' max='180' value='45' step='1' name='angle')

            div Speed attenuation:
              input(type='number' min='0.1' max='0.9' value='0.4' step='0.1' name="attenuation")

            div Gravity
              input(type='number' min='0' max='2000' value='1000' step='1' name="gravity")

            button Start

        .ui-group
          .ui-group__title Obstacles
          .ui-group__body
            button Remove all


        .ui-group
          .ui-group__title Background
          .ui-group__body
            label.ui-radio
              input(type='radio' name='type' value='image' checked)
              .toggle
              | Image background:

            div
              .ui-image.item.selected(style='background-image: url("./images/pat1.png")')
              .ui-image.item(style='background-image: url("./images/pat2.png")')
              .ui-image.item(style='background-image: url("./images/pat3.png")')
              .ui-image.add(title="Upload image")
              input.pos-away(type='file' id='selectFile' accept="image/x-png,image/gif,image/jpeg")
              .clr

            label.ui-radio
              input(type='radio' name='type' value='grid')
              .toggle
              | Grid background:

            div Grid size:
              input(type='number' min='0' max='200' value='50' step='50' name="grid")

            label.ui-radio
              input(type='radio' name='type' value='none')
              .toggle
              | Without background:

        .ui-group
          .ui-group__title Information:
          #logs.ui-group__body




    script(src='app.js')
