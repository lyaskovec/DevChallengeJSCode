* {
  padding: 0;
  margin: 0;
  outline none
}

body {
  font 12px/1.4 Tahoma
}

.align-center
  text-align center

:root
  --pointer-radious: 20px

canvas {
  width: 500px;
  height: 500px;
  border: 1px solid red;
  background url("./images/cloud.png")
  background-position 0 0
}

.b-controls {
  margin: 5px;
  b {
    display: block;
    margin-top 5px
  }
  input {
    padding 3px 5px
  }
}

.canvas {
  position relative
  margin 5px
  float: left
}

#point {
  position fixed
  border 1px solid black
  width var(--pointer-radious)
  height var(--pointer-radious)
  border-radius var(--pointer-radious)
  transform translate(-50%, -50%)
  left 200px
  top 200px
  .end {
    width 3px
    height 0px
    background red
    position absolute
    bottom 0
    left 50%
    transform translate(-50%, -10px)
    &:before, &:after {
      content ""
      background red
      position absolute
      top 0
      right 0
      height 15px
      width 3px
      transform rotate(30deg)
      transform-origin right top
    }
    &:after {
      transform-origin left top
      transform rotate(333deg)
    }
  }
  .drop {
    position absolute
    width var(--pointer-radious)
    height var(--pointer-radious)
    border 1px solid black
    border-radius var(--pointer-radious)
    top 0
    left 50%
    transform translate(-50%, -50%)
    cursor grab
    z-index 1
  }
}

.clr
  clear both
  display block

.ui-slider
  display flex
  position relative
  align-items: center;
  margin 5px 0

  &__point
    position absolute
    background #2c3e50;
    width 20px
    height 20px
    border-radius 20px
    left 10px
    top 50%
    transform: translateY(-50%) translateX(-50%);

  &__range
    -webkit-appearance: none;
    width: 100%;
    height: 10px;
    border-radius: 5px;
    background: #d7dcdf;
    outline: none;
    padding: 0;
    margin: 0;
    &:after
      position absolute
      left -10px
      top 0
      bottom 0
      right -10px

      content ""
      cursor pointer

  &__value {
    display: inline-block;
    position: relative;
    width: 60px;
    color: #fff;
    line-height: 20px;
    text-align: center;
    border-radius: 3px;
    background: #2c3e50;
    padding: 5px 10px;
    margin-left 15px

    &:after {
      position: absolute;
      top: 8px;
      left: -7px;
      width: 0;
      height: 0;
      border-top: 7px solid transparent;
      border-right: 7px solid #2c3e50;
      border-bottom: 7px solid transparent;
      content: '';
    }
  }

.ui-radio
  display block
  position relative
  margin 5px 0
  cursor pointer
  line-height 24px
  &:hover
    background #FAFAFA
  input
    opacity 1
    position absolute
    left 0
    top 0
  .toggle
    content ''
    width 20px
    height 20px
    display inline-block
    border-radius 24px
    border 2px solid  #2c3e50
    position relative
    margin-right 10px
    &:after
      transition all 0.2s
      background #2c3e50
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      transform scale(0)
      content ''
      border-radius 24px

  input:checked ~ .toggle:after
    opacity 1
    transform scale(0.8)

button
  background #2c3e50
  color white
  padding 10px 15px
  border 0
  border-radius 3px
  cursor pointer
  opacity 0.7
  &:hover
    opacity 1

.ui-image
  background: url(./images/cloud.png) no-repeat center;
  background-size: cover;
  width: 42px;
  height: 42px;
  border-radius: 3px;
  border: 2px solid #2c3e50;
  display: inline-block;
  position relative
  cursor pointer
  opacity 0.7

  &.selected:after
    content: " ";
    display: block;
    width: 1em;
    height: 2em;
    border: solid #2c3e50;
    border-width: 0 3px 3px 0;
    position: absolute;
    left: 1em;
    top: 14%;
    -webkit-transform: rotate(45deg); // tilts the shape
    -moz-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    transform: rotate(45deg);

  &.add
    &:after, &:before
      content ''
      background #2c3e50
      width 30px
      height 4px
      position absolute
      top 50%
      left 50%
      transform: translateY(-50%) translateX(-50%);
    &:after
      transform: translateY(-50%) translateX(-50%) rotate(90deg)

